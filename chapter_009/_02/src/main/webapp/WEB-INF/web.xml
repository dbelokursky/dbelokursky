<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>CarsList</servlet-name>
        <servlet-class>ru.job4j.carssale.controllers.CarsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarsList</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarAdd</servlet-name>
        <servlet-class>ru.job4j.carssale.controllers.CarAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarAdd</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImagesUpload</servlet-name>
        <servlet-class>ru.job4j.carssale.controllers.ImagesUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImagesUpload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarCard</servlet-name>
        <servlet-class>ru.job4j.carssale.controllers.CarCard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarCard</servlet-name>
        <url-pattern>/carcard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.job4j.carssale.controllers.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>