<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.job4j.carssale.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" type="string" column="name"/>
        <many-to-one name="engine" column="engine_type" class="ru.job4j.carssale.Engine" not-null="true"/>
        <many-to-one name="suspension" column="suspension_type" class="ru.job4j.carssale.Suspension" not-null="true"/>
        <many-to-one name="transmission" column="transmission_type" class="ru.job4j.carssale.Transmission"
                     not-null="true"/>
    </class>
</hibernate-mapping>